-- Should work
ALTER SYSTEM
  SET bdr.skip_ddl_locking = on;
ALTER SYSTEM
  SET bdr.skip_ddl_replication = on;
-- Should fail
ALTER SYSTEM
  SET bdr.permit_unsafe_ddl_commands = on;
