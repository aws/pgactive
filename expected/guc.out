-- Fixed.
-- Explicit "off" is OK
ALTER DATABASE regression
  SET bdr.permit_unsafe_ddl_commands = off;
ALTER SYSTEM
  SET bdr.permit_unsafe_ddl_commands = off;
ALTER SYSTEM
  RESET bdr.permit_unsafe_ddl_commands;
-- Per-user is OK
ALTER USER super
  SET bdr.permit_unsafe_ddl_commands = on;
ALTER USER super
  SET bdr.permit_unsafe_ddl_commands = off;
ALTER USER super
  RESET bdr.permit_unsafe_ddl_commands;
-- Per session is OK
SET bdr.permit_unsafe_ddl_commands = on;
SET bdr.permit_unsafe_ddl_commands = off;
RESET bdr.permit_unsafe_ddl_commands;
